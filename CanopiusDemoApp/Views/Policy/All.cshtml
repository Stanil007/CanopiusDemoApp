@model List<Data.Models.Policy>

<h1>All Policies</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Policy ID</th>
            <th>Customer Name</th>
            <th>Policy Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Premium Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var policy in Model)
        {
            <tr>
                <td>@policy.Id</td>
                <td>@policy.Customer.Name</td>
                <td>@policy.PolicyType</td>
                <td>@policy.StartDate.ToShortDateString()</td>
                <td>@policy.EndDate.ToShortDateString()</td>
                <td>@policy.PremiumAmount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@policy.Id" class="link-secondary">Details</a> |
                    <a asp-action="Update" asp-route-id="@policy.Id" class="link-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@policy.Id" class="link-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add">Add New Policy</a>
